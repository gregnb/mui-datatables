{
  "parser": "babel-eslint",
  "settings": {
    "react": {
      "version": "latest"
    },
    "import/extensions": [
      ".js"
    ],
    "import/parser": "babel-eslint",
    "import/resolver": {
      "node": {
        "extensions": [
          ".js"
        ]
      },
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "mocha": true,
    "node": true
  },
  "extends": [
    "plugin:jsx-a11y/recommended"
  ],
  "rules": {
    "no-console": "off",
    "semi": 2,
    "no-undef": 2,
    "no-undef-init": 2,
    "no-tabs": 2,
    "react/self-closing-comp": 2,
    "react/no-typos": 2,
    "react/jsx-no-duplicate-props": "warn",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "jsx-a11y/no-autofocus": [
      2,
      {
        "ignoreNonDOM": true
      }
    ]
  },
  "plugins": [
    "import",
    "react",
    "jsx-a11y",
    "filenames",
    "react-hooks"
  ]
}
